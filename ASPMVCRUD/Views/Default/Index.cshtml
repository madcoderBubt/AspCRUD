@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Html.EnableClientValidation(true);
    Html.EnableUnobtrusiveJavaScript(true);
}


<h1>CRUD Operation Succed!</h1>
<a href="#" class="btn btn-primary" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("_AddOrEdit","Employee")')"><i class="fa fa-plus"></i> Add New</a>
<table id="employeeTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Salary</th>
            <th></th>
        </tr>
    </thead>
</table>


@*<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />*@
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />
@section scripts{
    <script src="http://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="http://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>

    <script>
        //For DataTable
        var popup, dataTable;
        $(document).ready(function () {
            dataTable = $('#employeeTable').DataTable({
                "ajax": {
                    "url": "Employee/GetData",
                    "type": "Get",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "Name" },
                    { "data": "Position" },
                    { "data": "Office" },
                    { "data": "Age" },
                    { "data": "Salary" },
                    {
                        "data": "EmployeeID",
                        "render": function (data) {
                            return "<a href='#' class='btn btn-default' onclick=PopupForm('@Url.Action("_AddOrEdit","Employee")/" + data +"')><i class='fa fa-edit'></i> Edit</a><a href='#' class='btn btn-danger' onclick=deleteForm("+data+") style='margin-left:5px'><i class='fa fa-trash'></i> Delete</a>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width":"160px",
                    },
                ],
                "language": {
                    "infoempty": "No records found!",
                    "emptyTable": "No Data Found! Please Click <b>Add New</b> to add.",
                },
                
            });
        });

        //For Pop Up Dialog => Add or Edit Dialog
        function PopupForm(url) {
            var formDiv = $("<div/>");

            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: "Employee Details",
                        width: 500,
                        height: 500,
                        close: function () {
                            popup.dialog("destroy").remove();
                        }
                    });
                });
        }

        //For Refresh DataTable while closing Popup Dialog
        function submitForm(form) {
            $.validator.unobtrusive.parse(form);

            //alert($(form).valid());

            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            popup.dialog("close");                            
                            dataTable.ajax.reload();

                            //alert(data.message);
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success",
                            });
                        }
                    }
                });
            }

            return false;
        }

        //For Delete
        function deleteForm(id) {
            if (confirm('Are you sure to Delete this data?')) {
                $.ajax({
                    type: "Post",
                    url: '@Url.Action("Delete","Employee")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            //alert(data.message);
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "denger",
                            });
                        }
                    }
                });
            }
        }

    </script>
}